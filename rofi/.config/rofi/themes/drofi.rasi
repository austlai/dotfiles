/* vim:ft=css */
window {
    anchor: north;
    location: north;
    width: 100%;
    background-color: #676163;
    color: #fffff5;
    padding: 4px;
    children: [ horibox ];
}

horibox {
    orientation: horizontal;
    children:   [ prompt, entry, listview ];
    background-color:      #676163;
}

listview {
    layout:     horizontal;
    spacing:    5px;
    lines:      100;
    background-color:      #676163;

}

entry {
    expand:     false;
    width:      8em;
    background-color:      #676163;
    color: #fffff5;


}

element {
    padding: 0px 2px;
    background-color: #676163;
    color: #fffff5;
}

element-text {
    background-color: inherit;
    text-color: inherit;
}

element-icon {
    background-color: inherit;
    text-color: inherit;
}

element selected {
    background-color: #70566b;
}

prompt {
    background-color: #676163;
    color : #fffff5;
}

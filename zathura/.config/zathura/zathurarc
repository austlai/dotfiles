set completion-group-fg         "#6272a4" # Comment
set completion-highlight-bg     "#44475a" # Selection
set completion-highlight-fg     "#e2e2e3" # Foreground

set index-bg                    "#2c2e34" # Background
set index-fg                    "#e2e2e3" # Foreground
